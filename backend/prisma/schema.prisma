generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id               Int      @id @default(autoincrement())
  modality         String
  period           String?
  originalPrice    Float?
  installmentPrice Float?
  installments     Int?
  cashPrice        Float?
  description      String?
  type             String
  locationCity     String
  locationUnit     String
  locationAddress  String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  installmentPlans InstallmentPlan[]

  @@map("courses")
}

model InstallmentPlan {
  id                Int      @id @default(autoincrement())
  courseId          Int
  installments      Int
  installmentValue  Float
  totalPrice        Float
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@map("installment_plans")
}

model Student {
  id                        Int      @id @default(autoincrement())
  fullName                  String
  cpf                       String   @unique
  birthDate                 DateTime
  email                     String   @unique
  phone                     String
  highSchoolCompletionYear  Int
  agreeToTerms              Boolean
  receiveWhatsappNotifications Boolean @default(false)
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt

  @@map("students")
}